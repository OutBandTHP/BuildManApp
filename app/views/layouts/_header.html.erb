<header class="navbar navbar-fixed-top navbar-light" style="background-color: #0687cc;">
  <div class="container">
    <a class="navbar-brand">
      <%= link_to t('navigation.app_name'), root_path, id: "logo" %>
    </a>
    <nav navbar-light>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed"
                data-toggle="collapse"
                data-target="#bs-example-navbar-collapse-1"
                aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <% if ltr_or_rtl == 'ltr' %>
        <ul class="nav navbar-nav navbar-right collapse navbar-collapse" 
            id="bs-example-navbar-collapse-1">
          <li><%= link_to t('navigation.home'),  root_path %></li>
          <li><%= link_to t('navigation.help'),  help_path %></li>
          <% if logged_in? %>
            <li><%= link_to t('navigation.users'), users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t('navigation.account') %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('navigation.profile'), current_user %></li>
                <li><%= link_to t('navigation.settings'), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t('navigation.logout'), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t('navigation.login'), login_path %></li>
          <% end %>
          <li>  
            <%= form_tag root_path, class: 'locale' do %>
              <%= select_tag 'set_locale',
                  options_for_select(LANGUAGES, I18n.locale.to_s),
                  onchange: 'this.form.submit()' %>
              <%= submit_tag 'submit', id: "submit_locale_change" %>
            <% end %>
          </li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-left collapse navbar-collapse" 
            id="bs-example-navbar-collapse-1">
          <li>  
            <%= form_tag root_path, class: 'locale' do %>
              <%= select_tag 'set_locale',
                  options_for_select(LANGUAGES, I18n.locale.to_s),
                  onchange: 'this.form.submit()' %>
              <%= submit_tag 'submit', id: "submit_locale_change" %>
            <% end %>
          </li>
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t('navigation.account') %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('navigation.profile'), current_user %></li>
                <li><%= link_to t('navigation.settings'), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t('navigation.logout'), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
            <li><%= link_to t('navigation.users'), users_path %></li>
          <% else %>
            <li><%= link_to t('navigation.login'), login_path %></li>
          <% end %>
          <li><%= link_to t('navigation.help'),  help_path %></li>
          <li><%= link_to t('navigation.home'),  root_path %></li>
        </ul>
      <% end %>
      </nav>
  </div>
</header>