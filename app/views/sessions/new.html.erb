<% provide(:title, t('navigation.login')) %>
<h1><%= t('navigation.login') %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :email, t('sessions.email') %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label t('sessions.password') %>
      <%= link_to '('+t('sessions.forgot_pw')+')', new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t('sessions.remember') %></span>
      <% end %>

      <%= f.submit t("navigation.login"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t('sessions.newuser') %> <%= link_to t("navigation.signup"), signup_path %></p>
  </div>
</div>