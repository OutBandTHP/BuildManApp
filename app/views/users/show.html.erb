<% provide(:title, @user.name) %>
<div class="row">
  <section class="user_info">
    <h1><%= t('sessions.col_user') %>: <%= @user.name %></h1>
    <p>
      <%= gravatar_for @user %>
      <p><h4><%= t('sessions.col_email') %>: <%= @user.email %></h4></p>
      <p><h4><%= t('sessions.col_lang') %>: <%= LANGUAGES.reduce {|lang, hit| lang[1] == @user.language ? lang[0] : hit[0]}  %></h4></p>
      <% if @user.admin %> 
        <p><h4><%= t('sessions.admin') %></p></h4>
      <% end %>
    </p>
  </section>
</div>